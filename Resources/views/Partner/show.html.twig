{% extends admin_layout %}

{% block layout %}
    <h1>Partner</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td>
                {% if entity.picture %}
                    <img src="{{ entity.picture.getwebpath|imagine_filter('admin_show') }}"
                         alt="image_partner_{{ entity.id }}"/>
                {% else %}
                    <img src="{{ 'uploads/partners/no-image.jpg'|imagine_filter('admin_show') }}"
                         alt="no image"/>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_partners') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_partners_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
